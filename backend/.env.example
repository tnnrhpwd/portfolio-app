# ===========================================
# Application Settings
# ===========================================
NODE_ENV=development
PORT=5000

# ===========================================
# Database (Legacy MongoDB - if still used)
# ===========================================
MONGO_URI=mongodb+srv://username:password@cluster0.xxxxx.mongodb.net/DatabaseName?retryWrites=true&w=majority

# ===========================================
# Authentication
# ===========================================
# Generate a strong secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-jwt-secret-min-32-characters-long

# ===========================================
# AI/LLM API Keys
# ===========================================
# OpenAI API Key - https://platform.openai.com/api-keys
OPENAI_KEY=sk-your-openai-api-key-here

# XAI (Grok) API Key - https://x.ai/api
XAI_API_KEY=xai-your-xai-api-key-here

# Google API Key (if used)
GOOGLE_KEY=your-google-api-key-here

# ===========================================
# External APIs
# ===========================================
# RapidAPI Key - https://rapidapi.com/
RAPIDAPI_KEY=your-rapidapi-key-here

# Brave Search API Key (optional) — enables real web search in /net chat
# Free tier: 2000 requests/month — https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=

# ===========================================
# Payment Processing (Stripe)
# ===========================================
# Use sk_test_ for development, sk_live_ for production
STRIPE_KEY=sk_test_your-stripe-secret-key-here
# Use pk_test_ for development, pk_live_ for production
STRIPE_PUBLIC_KEY=pk_test_your-stripe-publishable-key-here
# Optional: Test keys for the sales funnel tester (so live customers aren't affected)
TEST_STRIPE_KEY=sk_test_your-stripe-test-secret-key-here
TEST_STRIPE_PUBLIC_KEY=pk_test_your-stripe-test-publishable-key-here

# ===========================================
# Email Service (Postmark)
# ===========================================
POSTMARK_API_TOKEN=your-postmark-api-token-here
FROM_EMAIL=noreply@yourdomain.com

# ===========================================
# AWS Configuration
# ===========================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# === AWS S3 + CLOUDFRONT CONFIGURATION ===
# Primary S3 Bucket for file storage
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_REGION=us-east-1

# CloudFront Distribution for fast global delivery
AWS_CLOUDFRONT_DOMAIN=your-distribution-id.cloudfront.net

# Enable CloudFront (set to false to use direct S3 URLs)
USE_CLOUDFRONT=true

# S3 Bucket Configuration
S3_BUCKET_PUBLIC_READ=false
S3_PRESIGNED_URL_EXPIRES=900

# ===========================================
# File Upload Limits & Security
# ===========================================
MAX_FILE_SIZE=52428800
MAX_FILES_PER_UPLOAD=5
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,text/plain,text/csv,application/json,application/vnd.openxmlformats-officedocument.wordprocessingml.document,application/vnd.openxmlformats-officedocument.spreadsheetml.sheet

# File Storage Organization
S3_FOLDER_STRUCTURE=users/{userId}/{fileType}
FILE_NAMING_STRATEGY=uuid

# Content Delivery & Performance
CLOUDFRONT_CACHE_TTL=86400
S3_TRANSFER_ACCELERATION=false

# Security & Access Control
CORS_ALLOWED_ORIGINS=https://yourdomain.com,http://localhost:3000
FILE_VIRUS_SCANNING=false
WATERMARK_IMAGES=false

# Legacy Support
SUPPORT_BASE64_FILES=true

# ===========================================
# Admin Configuration
# ===========================================
ADMIN_USER_ID=your-admin-user-id
